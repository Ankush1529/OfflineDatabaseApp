<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.myapplication.ConAcc"
    android:background="@drawable/border_blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER ID    "
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView"
        android:inputType="number"
        android:background="@drawable/border_blue"
        android:layout_alignBottom="@+id/textView"
        android:enabled="false"
        android:textColor="#030bfe"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME       "
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:layout_below="@+id/e1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView2"
        android:inputType="text"
        android:background="@drawable/border_blue"
        android:layout_alignTop="@+id/textView2"
        android:enabled="false"
        android:textAlignment="center"
        android:textColor="#030bfe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BALANCE "
        android:id="@+id/textView3"
        android:textSize="30sp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView3"
        android:inputType="number"
        android:enabled="false"
        android:background="@drawable/border_blue"
        android:layout_alignTop="@+id/textView3"
        android:textAlignment="center"
        android:textColor="#030bfe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONEY TRANSFER"
        android:id="@+id/b1"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:maxWidth="150dp"
        android:textSize="19sp"
        android:onClick="money" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HISTORY"
        android:id="@+id/b2"
        android:layout_alignTop="@+id/b1"
        android:layout_alignParentEnd="true"
        android:minWidth="150dp"
        android:textSize="19sp"
        android:minHeight="65dp"
        android:onClick="history" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE PASSWORD"
        android:id="@+id/b3"
        android:layout_below="@+id/b1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:maxWidth="150dp"
        android:textSize="19sp"
        android:onClick="password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG OUT"
        android:id="@+id/b4"
        android:layout_alignTop="@+id/b3"
        android:layout_alignParentEnd="true"
        android:minWidth="150dp"
        android:textSize="19sp"
        android:minHeight="65dp"
        android:onClick="logout" />


</RelativeLayout>
